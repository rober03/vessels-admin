# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.at(path="/public", file)

# Vessels Administration
GET           /vessels                          controllers.VesselController.vessels
GET           /vessel/:id                       controllers.VesselController.vessel(id:String)
POST          /vessel                           controllers.VesselController.newVessel
DELETE        /vessel/:id                       controllers.VesselController.deleteVessel(id:String)
PUT           /vessel/:width/:length/:draft     controllers.VesselController.editVessel(width: String, length: String, draft: String)
